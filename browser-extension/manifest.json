{
  "manifest_version": 3,
  "name": "AI Feeds Card Capture",
  "description": "Capture AI Feeds cards including Twitter embeds",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*"
  ]
}
